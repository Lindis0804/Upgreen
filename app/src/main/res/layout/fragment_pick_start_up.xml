<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llAddJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvJobs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:text="Công việc hiện tại"
                    android:textColor="@color/deep_green"
                    android:textSize="@dimen/title"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/ibAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:background="@null"
                    android:src="@drawable/icon_add" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvJobs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvBirthday1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày sinh"
            android:textColor="@color/deep_green"
            android:textSize="@dimen/title"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tvBirthday"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:paddingVertical="10dp"
            android:drawableEnd="@drawable/icon_calendar"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textSize="@dimen/content"
            android:background="@drawable/custom_text_view"
            android:textColor="@color/deep_green" />

        <TextView
            android:id="@+id/tvCaredFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lĩnh vực quan tâm"
            android:textColor="@color/deep_green"
            android:textSize="@dimen/title"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCaredFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvTakingPartInSomeProjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Một số dự án đã tham gia"
            android:textColor="@color/deep_green"
            android:textSize="@dimen/title"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/etTakingPartInSomeProjects"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/custom_text_view"
            android:padding="10dp"
            android:hint="Chia sẻ một số dự án bạn đã tham gia"
            android:textSize="@dimen/content"
            android:textColor="@color/deep_green"
            android:textColorHint="@color/deep_green" />


        <TextView
            android:id="@+id/tvLinkedInLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LinkedIn"
            android:textColor="@color/deep_green"
            android:textSize="@dimen/title"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/custom_text_view"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/content"
                android:text="LinkedIn"
                android:gravity="center|start"
                android:paddingStart="10dp"
                android:textColor="@color/deep_green"
                android:paddingVertical="10dp"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_linkedin"
                android:background="@drawable/custom_linkedin_background"
                android:padding="7dp"
                />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:paddingHorizontal="50dp"
            android:paddingVertical="10dp"
            android:layout_gravity="center"
            android:text="Lưu"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_sign_button"
            android:backgroundTint="@color/deep_green"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

</ScrollView>