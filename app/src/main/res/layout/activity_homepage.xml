<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Homepage.Homepage">

    <FrameLayout
        android:id="@+id/fl_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_page_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/homepage_nav_menu"
        app:itemIconTint="@color/moss"
        app:itemTextColor="@color/moss"
        android:backgroundTint="@color/moss"
        />
</LinearLayout>