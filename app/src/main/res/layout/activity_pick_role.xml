<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_green"
    android:orientation="vertical"
    tools:context=".Sign.PickRole">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="@dimen/ib"
            android:layout_height="@dimen/ib"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_arrow_left"
            app:tint="@color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Bạn tham gia với vai trò ?"
            android:textColor="@color/white"
            android:textSize="@dimen/header"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlPickRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/deep_green"
        app:tabBackground="@drawable/tab_background"
        app:tabIndicatorColor="#00ff0000"
        app:tabSelectedTextColor="@color/deep_green"
        app:tabTextColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_4_corners_layout">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpPickRole"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</LinearLayout>